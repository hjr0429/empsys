<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanqiao.empsys.mapper.EmployeesMapper">

    <resultMap id="BaseResultMap" type="com.lanqiao.empsys.domain.Employees">
            <id property="empno" column="EMPNO" jdbcType="INTEGER"/>
            <result property="ename" column="ENAME" jdbcType="VARCHAR"/>
            <result property="job" column="JOB" jdbcType="VARCHAR"/>
            <result property="mgr" column="MGR" jdbcType="INTEGER"/>
            <result property="hiredate" column="HIREDATE" jdbcType="DATE"/>
            <result property="sal" column="SAL" jdbcType="DOUBLE"/>
            <result property="comm" column="COMM" jdbcType="DOUBLE"/>
            <result property="deptno" column="DEPTNO" jdbcType="INTEGER"/>
            <result property="ename" column="ename"/>
            <result property="dname" column="dname"/>
    </resultMap>

    <sql id="Base_Column_List">
        EMPNO,
        ENAME,
        JOB,
        MGR,
        HIREDATE,
        SAL,
        COMM,
        DEPTNO
    </sql>

    <select id="selectByPrimaryKey" parameterType="integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from employees
        where  EMPNO = #{empno,jdbcType=INTEGER} 
    </select>

    <select id="selectBySelective" parameterType="Employees" resultMap="BaseResultMap">
        select
        e.EMPNO,
        e.ENAME,
        e.JOB,
        e.MGR,
        m.ENAME mname,
        e.HIREDATE,
        e.SAL,
        e.COMM,
        e.DEPTNO,
        d.DNAME dname
        from employees e, employees m,department d
        <where>

             AND m.EMPNO=e.MGR
             AND e.deptno=d.deptno
            
            <if test="employees.ename != null and employees.ename.trim().length()>0" >
                <bind name="pattern" value="'%'+employees.ename+'%'"/>
                AND e.ENAME like #{pattern}
            </if>
            <if test="employees.job != null and employees.job.trim().length()>0">
                AND e.JOB = #{employees.job}
            </if>

            <if test="employees.deptno != null ">
                AND e.DEPTNO = #{employees.deptno}
            </if>
        </where>
    </select>

    <delete id="deleteByPrimaryKey" parameterType="integer">
        delete from employees
        where  EMPNO = #{empno,jdbcType=INTEGER} 
    </delete>

    <insert id="insert" keyColumn="empno" keyProperty="empno" parameterType="Employees" useGeneratedKeys="true">
        insert into employees
        ( EMPNO,
          ENAME,
          JOB,
          MGR,
          HIREDATE,
          SAL,
          COMM,
          DEPTNO
          )
        values (#{empno,jdbcType=INTEGER},
                #{ename,jdbcType=VARCHAR},
                #{job,jdbcType=VARCHAR},
                #{mgr,jdbcType=INTEGER},
                #{hiredate,jdbcType=DATE},
                #{sal,jdbcType=DOUBLE},
                #{comm,jdbcType=DOUBLE},
                #{deptno,jdbcType=INTEGER})
    </insert>

    <insert id="insertSelective" keyColumn="empno" keyProperty="empno" parameterType="com.lanqiao.empsys.domain.Employees" useGeneratedKeys="true">
        insert into employees
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="empno != null">EMPNO,</if>
                <if test="ename != null">ENAME,</if>
                <if test="job != null">JOB,</if>
                <if test="mgr != null">MGR,</if>
                <if test="hiredate != null">HIREDATE,</if>
                <if test="sal != null">SAL,</if>
                <if test="comm != null">COMM,</if>
                <if test="deptno != null">DEPTNO,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="empno != null"> #{empno,jdbcType=INTEGER},</if>
                <if test="ename != null"> #{ename,jdbcType=VARCHAR},</if>
                <if test="job != null"> #{job,jdbcType=VARCHAR},</if>
                <if test="mgr != null"> #{mgr,jdbcType=INTEGER},</if>
                <if test="hiredate != null"> #{hiredate,jdbcType=DATE},</if>
                <if test="sal != null"> #{sal,jdbcType=DOUBLE},</if>
                <if test="comm != null"> #{comm,jdbcType=DOUBLE},</if>
                <if test="deptno != null"> #{deptno,jdbcType=INTEGER},</if>
        </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="Employees">
        update employees
        <set>
                <if test="ename != null">
                    ENAME = #{ename,jdbcType=VARCHAR},
                </if>
                <if test="job != null">
                    JOB = #{job,jdbcType=VARCHAR},
                </if>
                <if test="mgr != null">
                    MGR = #{mgr,jdbcType=INTEGER},
                </if>
                <if test="hiredate != null">
                    HIREDATE = #{hiredate,jdbcType=DATE},
                </if>
                <if test="sal != null">
                    SAL = #{sal,jdbcType=DOUBLE},
                </if>
                <if test="comm != null">
                    COMM = #{comm,jdbcType=DOUBLE},
                </if>
                <if test="deptno != null">
                    DEPTNO = #{deptno,jdbcType=INTEGER},
                </if>
        </set>
        where   EMPNO = #{empno,jdbcType=INTEGER} 
    </update>

